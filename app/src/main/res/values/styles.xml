<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorGray2</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorGray2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TabStyle">
        <item name="android:textSize" tools:ignore="SpUsage">13dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="colorAccent">@color/colorRed2</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="colorPrimary">@color/colorGray6</item>
        <item name="colorPrimaryDark">@color/colorGray6</item>
        <item name="colorAccent">@color/colorGray6</item>
    </style>

    <style name="EditTextStyle">
        <item name="colorAccent">@color/colorGray3</item>
    </style>

</resources>
