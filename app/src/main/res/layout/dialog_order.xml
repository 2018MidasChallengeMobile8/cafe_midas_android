<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:baselineAligned="true">

    <TextView
        android:id="@+id/dialog_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="아이스티 복숭아"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:baselineAligned="true"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cash"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/dialog_txt_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5,300원"
            android:textColor="@color/colorYellow"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <Button
            android:id="@+id/dialog_btn_minus"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="-"

            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/dialog_txt_num"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:text="1"
            android:gravity="center"/>

        <Button
            android:id="@+id/dialog_btn_plus"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/dialog_btn_order"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:background="@color/colorYellow"
            android:text="주문하기"/>

        <Button
            android:id="@+id/dialog_btn_cancel"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/colorYellow"
            android:text="취소하기"/>

    </LinearLayout>

    <Button
        android:id="@+id/dialog_btn_add"
        android:layout_marginTop="5dp"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@color/colorYellow"
        android:layout_gravity="center|bottom"
        android:text="담기"
        />


</LinearLayout>